{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "rewrites": [{
    "source": "/dist/**",
    "destination": "/dist.html"
  },
  {
    "source": "**",
    "destination": "/index.html"
  }],
    "source": "functions"
  }
}
